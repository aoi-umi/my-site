{
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": true
  },
  "editor.detectIndentation": false,

  "eslint.codeActionsOnSave.mode": "all",
  "eslint.options": {
    "extensions": [".tsx"]
  },
  "eslint.validate": ["typescript", "typescriptreact"],
  "editor.tabSize": 2,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "dist": true,
    "node_modules": true
  }
}
